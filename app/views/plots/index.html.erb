<h1>List of Plots</h1>

<% @plots.each do |plot| %>
  <h3>Plot Number: <%= plot.number %></h3>
  <% if plot.plants.any? %>
    <ul>
      <% plot.plants.each do |plant| %>
        <li><%= plant.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No plants in this plot.</p>
  <% end %>
<% end %>